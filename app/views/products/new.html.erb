<h1>New Product</h1>
<%= form_with scope: :product, url: products_path, local: true do |form| %>

<% if @product.errors.any? %>
   <div id="error_explanation">
     <h2>
       <%= pluralize(@product.errors.count, "error") %> prohibited
       this product from being saved:
     </h2>
     <ul>
       <% @product.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

  <p>
    <strong>Name</strong><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <strong>UPC</strong><br>
    <%= form.text_field :upc %>
  </p>

  <p>
    <strong>Available On</strong><br>
    <%= form.date_field :available_on %>
  </p>

<h2>Properties</h2>
  <table>
    <%= form.fields_for :properties do |p_form| %>
    <tr>
      <th>Property Name</th>
      <th>Property Value</th>
    </tr>
    <tr>
    <td>
      <%= p_form.text_field :property_name %>
    </td>
    <td>
    <%= p_form.fields_for :product_properties do |productprop_form| %>
      <%= productprop_form.text_field :value %>
    <% end %>
    </td>
    <%= p_form.add_nested_fields_link :properties do %>
      <span>New Property</span>
    <% end %>
      	<% end %>
  </table>

  <p>
    <%= form.submit "Add Product" %>
  </p>
<% end %>
